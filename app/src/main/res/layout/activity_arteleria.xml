<TableLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/x1y1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/x1"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:text="X1"
        />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/y1"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Y1"
        />

    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dms"
        android:layout_marginTop="10dp"
    >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/distance"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Дальность"
            android:textAlignment="center"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/distanceDefDot"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Высота"
            android:textAlignment="center"
            />
    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/dms"
        android:layout_marginTop="10dp"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/degree"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Угол места"
            android:textAlignment="center"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/degreeDirection"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Дирекционный угол"
            android:textAlignment="center"
            />

    </TableRow>
    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/x2y2">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/x2"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:textAlignment="center"
            android:text="X2"
        />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/y2"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:text="Y2"
        />
    </TableRow>
</TableLayout>